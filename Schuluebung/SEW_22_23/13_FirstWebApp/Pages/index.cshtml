@page

@functions{
    public string? DayName { get; set; }

    public void OnGet(){    // OnGet wird bei einem GET-Request aufgerufen
        Model.DayName = DateTime.Today.ToString("dddd");
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>Hello World!</h1>
    <h2>Heute ist: @Model.DayName</h2>
</body>
</html>