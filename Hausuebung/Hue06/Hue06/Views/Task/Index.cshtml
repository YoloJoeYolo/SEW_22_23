@model IEnumerable<ToDoShared.Task>

@{
    ViewData["Title"] = "ToDo-List";
}
<div class="container">
    <h1>ToDo-List</h1>

<p>
    <a class="btn btn-primary text-white" asp-action="Create">Create New</a>
</p>
</div>
<table id="TableTasks" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Summary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriorityNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            @if (item.PriorityNavigation.Priority1 == "Low")
            {
                    <td style="background-color:#a0c460;">
                    @Html.DisplayFor(modelItem => item.PriorityNavigation.Priority1)
                </td>
            }
            @if (item.PriorityNavigation.Priority1 == "Medium")
            {
                    <td style="background-color:#ffc55f;">
                    @Html.DisplayFor(modelItem => item.PriorityNavigation.Priority1)
                </td>
            }
            @if (item.PriorityNavigation.Priority1 == "High")
            {
                <td style="background-color:#ffa360;">
                    @Html.DisplayFor(modelItem => item.PriorityNavigation.Priority1)
                </td>
            }
                @if (item.StatusNavigation.Status1 == "Completete")
            {
                    <td style="background-color:#79c943;">
                    @Html.DisplayFor(modelItem => item.StatusNavigation.Status1)
                </td>
            }
                @if (item.StatusNavigation.Status1 != "Completete")
            {
                <td>
                    @Html.DisplayFor(modelItem => item.StatusNavigation.Status1)
                </td>
            }
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>